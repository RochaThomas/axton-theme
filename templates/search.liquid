{% if search.performed %}
    <h1>Results</h1>
    {% for result in search.results %}
        <div>
            {% if result.object_type == 'page' %}
                <a href="{{ result.url }}">{{ result.title }}</a>
            {% else %}
                <img src="{{ result.featured_image | image_url: width: 200 }}" alt="result image">
                <a href="{{ result.url }}">{{ result.title }}</a>
            {% endif %}
        </div>
    {% endfor %}
{% else %}
    <h1>Try Searching for Something...</h1>
{% endif %}